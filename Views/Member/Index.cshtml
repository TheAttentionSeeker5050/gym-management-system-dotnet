@model List<gym_management_system.Models.GymMember>

@{
    ViewData["Title"] = "Members List";
    // ViewData["CustomCss"] = "~/css/authViews.css";
}

<div class="text-center my-5 px-3 container">
    <h1>Zeus Gym - Members List</h1>
    
    @* add a button section *@
    <section class="my-5">
        @* add button *@
        <a asp-action="Create" asp-controller="Member" class="btn btn-primary custom-btn-primary">
            Add Member
        </a>
    </section>

    @* create table for the Gym member objects *@
    @* the values are: Email, FullName, PhoneNumber, Address, DateOfBirth *@
    <table class="my-5 table">
        <thead>
            <tr>
                @* only display the username if not mobile *@
                <th scope="col" class="d-sm-table-cell d-none">
                    UserName
                </th>
                <th scope="col">
                    Email
                </th>
                <th scope="col" class="d-sm-table-cell d-none">
                    Full Name
                </th>
                <th scope="col" class="d-sm-table-cell d-none">
                    Phone Number
                </th>
                <th scope="col" class="d-sm-table-cell d-none">
                    Address
                </th>
                <th scope="col" class="d-sm-table-cell d-none">
                    DOB
                </th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var member in Model)
            {
                <tr>
                    <td class="d-sm-table-cell d-none">
                        <a asp-action="Details" asp-route-id="@member._id" asp-controller="Member">
                            @member.UserName
                        </a>
                    </td>
                    <td>
                        <a asp-action="Details" asp-route-id="@member._id" asp-controller="Member">
                            @member.Email
                        </a>
                    </td>
                    <td class="d-sm-table-cell d-none">
                        <a asp-action="Details" asp-route-id="@member._id" asp-controller="Member">
                            @member.FullName
                        </a>
                    </td>
                    <td class="d-sm-table-cell d-none">
                        @member.PhoneNumber
                    </td>
                    <td class="d-sm-table-cell d-none">
                        @member.Address
                    </td>
                    <td class="d-sm-table-cell d-none">
                        @member.DateOfBirth
                    </td>
                    <td class="d-flex flex-sm-row flex-column gap-2">
                        @* add edit and delete buttons *@
                        <a asp-action="Edit" asp-route-id="@member._id" asp-controller="Member" class="btn btn-primary btn-secondary">
                            Edit
                        </a>
                        <a asp-action="Delete" asp-route-id="@member._id" asp-controller="Member" class="btn btn-danger custom-btn-danger">
                            Delete
                        </a>
                    </td>
                </tr>
            }
        </tbody>
    </table>





</div>
